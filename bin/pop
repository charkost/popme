#!/usr/bin/env ruby
require "popme/cli"

commands = %[add list -l help -h rm backup -b search -s]
begin
  if ARGV[0]
    if commands.include?(ARGV[0])
      Popme::CLI.start(ARGV)
    else
      cli = Popme::CLI.new
      cli.open(ARGV[0])
    end
  else
    cli = Popme::CLI.new
    cli.help
  end
rescue SystemExit, Interrupt
  puts "\nInterrupt received exiting..."
  exit
end
